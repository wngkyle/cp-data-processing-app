{
  "name": "Toward-Relay",
  "productName": "Toward Relay",
  "author": "Kyle Wang",
  "description": "Data Processing App",
  "homepage": "./",
  "version": "0.1.0",
  "private": true,
  "main": "public/electron.js",
  "type": "module",
  "dependencies": {
    "@babel/plugin-proposal-private-property-in-object": "^7.21.11",
    "@react-spring/web": "^9.7.3",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "axios": "^1.6.7",
    "electron-is-dev": "^3.0.1",
    "python-shell": "^5.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^5.0.1",
    "react-loader-spinner": "^6.1.6",
    "react-router-dom": "^6.21.3",
    "react-scripts": "5.0.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron-dev": "concurrently \"cross-env BROWSER=none npm start\" \"wait-on http://localhost:3000 && electron .\"",
    "electron-pack": "electron-builder -c.extraMetadata.main=build/electron.js",
    "electron-pack-mac": "electron-builder --mac",
    "electron-pack-intel-mac": "electron-builder --mac --x64",
    "electron-pack-win": "electron-builder --win --x64",
    "electron-pack-mwl": "electron-builder -mwl",
    "preelectron-pack": "react-scripts build",
    "start-server-mac": "python3 ./../server/server.py"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^28.2.0",
    "electron-builder": "^24.9.1",
    "tailwindcss": "^3.4.1",
    "wait-on": "^7.2.0"
  },
  "build": {
    "mac": {
      "icon": "./public/icon.icns"
    },
    "win": {
      "target": "nsis",
      "icon": "./public/favicon.ico"
    },
    "linux": {
      "icon": "./public/logo512.png"
    },
    "files": [
      "build/",
      "node_modules/",
      "public/",
      "src/",
      "main.js",
      "package.json",
      "server-dist-mac/",
      "server-dist-windows/"
    ],
    "extraResources": [
      {
        "from": "server-dist-mac/",
        "to": "server-dist-mac/"
      },
      {
        "from": "server-dist-windows/",
        "to": "server-dist-windows/"
      }
    ]
  }
}
